<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/telecom_view"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:background="@color/white" />
    
    <ImageView
        android:id="@+id/photo_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/telecom_view" />

    <CheckBox 
        android:id="@+id/check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:focusable="false" />
    
    <TextView 
        android:id="@+id/name_view"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/photo_view"
        android:layout_alignTop="@id/photo_view"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView 
        android:id="@+id/type_view"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/name_view"
        android:layout_alignLeft="@id/name_view"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="italic" />
    
    <TextView 
        android:id="@+id/number_view"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/name_view"
        android:layout_toRightOf="@id/type_view"
        android:textColor="@color/white"
        android:textSize="14sp" />

</RelativeLayout>